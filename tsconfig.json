{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "lib": ["ES2018", "DOM"],
    "paths": {
      "@dmhsq_monitor/utils": ["./packages/utils/src"],
      "@dmhsq_monitor/core": ["./packages/core/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
} 